<Application x:Class="WPFSkins.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFSkins"
             StartupUri="MainWindow.xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Application.Resources>
        <x:Array x:Key="ListBoxItems" Type="{x:Type sys:String}">
            <sys:String>Chapter 1</sys:String>
            <sys:String>Chapter 2</sys:String>
        </x:Array>
        
        <x:Array x:Key="StatusBarItems" Type="{x:Type sys:String}">
            <sys:String>You have successfully registered this product.</sys:String>
        </x:Array>
        
        <sys:String x:Key="HelpButtonText">Help</sys:String>
        <sys:String x:Key="OKButtonText">OK</sys:String>

        <sys:String x:Key="StyleButtonDefaultText">Default</sys:String>
        <sys:String x:Key="StyleButton1Text">Style1</sys:String>
        <sys:String x:Key="StyleButton2Text">Style2</sys:String>
        <sys:String x:Key="StyleButton3Text">Style3</sys:String>
        <sys:String x:Key="StyleButton4Text">Style4</sys:String>
    </Application.Resources>
</Application>
